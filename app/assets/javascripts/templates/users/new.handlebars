<h1>{{fullName}}</h1>
<form>
  <fieldset>
    <div>
      {{view Ember.TextField placeholder="First Name" valueBinding="firstName" name="firstName"}}
    </div>
    <div>
      {{view Ember.TextField placeholder="Last Name" valueBinding="lastName" name="lastName"}}
    </div>
    <div>
      {{view Ember.TextArea placeholder="Quote" valueBinding="quote" name="quote"}}
    </div>
    <button {{action 'save'}} class="btn btn-success">Save</button>
  </fieldset>
</form>
<div class='page-header'></div>

<a href='#' {{action cancel target='controller'}} class='btn btn-inverse'>Cancel</a>
